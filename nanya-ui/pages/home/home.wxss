.products-view {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.products-view .product-view {
  background-color: white;
  margin-top: 25rpx;
  width: 48%;
}

.product-view .product-image {
  width: 100%;
  height: 450rpx;
  background-size: cover;
  background-position: center;
}

.product-text-view text {
  display: block;
}

.product-text-view {
  padding: 12rpx 20rpx 15rpx 12rpx;
}

.product-text-view .product-name {
  font-size: 30rpx;
  color: #535353;
}

.product-text-view .product-desc {
  font-size: 25rpx;
  color: #bcbcbc;
  padding-top: 5rpx;
  height: 70rpx;
}

.product-text-view .product-price {
  font-size: 32rpx;
  color: #d74848;
  padding-top: 20rpx;
}

.price-view {
  display: flex;
  justify-content: flex-start;
}

.discount-price {
  font-size: 32rpx;
  padding-top: 20rpx;
  padding-left: 10rpx;
  text-decoration: line-through;
  color: #919191;
}