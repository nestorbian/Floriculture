@import "/dist/common/index.wxss";

swiper {
  width: 100%;
  height: 400rpx;
}

swiper .slide-image {
  width: 100%;
  height: 400rpx;
}

.navigation {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 15px 0 15px 0;
  flex-wrap: nowrap;
}

.navigation view {
  /* background: yellow; */
  padding: 0 30rpx 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.navigation view image {
  width: 60rpx;
  height: 60rpx;
}

.navigation .right-border {
  border-right: 2rpx solid #f0f0f0;
}

.navigation view text {
  font-size: 32rpx;
}

.body {
  background-color: #f4f4f4;
  padding: 0 20rpx 0 20rpx;
}

.body .theme {
  padding: 20rpx 0 20rpx 0;
}

.body .item .category-view image {
  width: 100%;
}

.body .item .content .category-view {
  width: 100%;
  height: 350rpx;
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

