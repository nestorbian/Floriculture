/* pages/order/orderList.wxss */
/*切换栏*/
.swiper-tab {
  height: 10%;
  line-height: 40px;
  color:#545454;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
 
.swiper-tab-list {
  padding: 0 4px;
  font-size: 15px;
}
 
.on {
  border-bottom:2px solid #fc7174;
  color:#fc7174;
}
 
.navTopList {
  display: flex;
  width: 100%;
  height: 70rpx;
  background: #fff;
  border-bottom: 1rpx solid #BEBEBE	;
  margin-top:5px;
}
 
.navTopList .order-info {
  text-align: center;
}
 
.navTopList .order-info view {
  width: 56rpx;
  height: 56rpx;
  margin-left: 31rpx;
}
 
.navTopList .order-info text {
  font-size: 34rpx;
}
 
.navTopList .order-info text.active {
  color: #ff6662;
}
 
.navTopList .ywc,.navTopList .dfk,.navTopList .yqx {
  flex: 1;
}
 
 
/*订单列表*/
.orderDetails {
  background: #fff;
  border-top: 12px solid #eeeeee;
}
 
.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2px solid #f8f8f8;
}
 
.orderListTitle .userName {
  padding-right: 50rpx;
  margin-left:10px;
  color:#535353;
  font-size: 14px;
}
 
.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #ff6662;
  font-size: 14px;
}
 
.orderListDetails {
  display: flex;
  height: 200rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
 
.orderListDetails .productImg {
  flex: 1;
  height:180rpx;
  width:120px;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
 
.orderListDetails .productImg image {
  width: 100px;
  height: 90%;
}
 
.orderListDetails .productInfo {
  flex: 4;
  margin: 40rpx 10px 20px 30rpx;
  font-size:15px;
 
}
 
.orderListDetails .productInfo .productTitle {
  font-size:15px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom:10px;
  color: #656565;
}
 
.productCount {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #f3f3f3;
  color: #6d6d6d;
  font-size: 15px;
}
 
.productCount>view {
  float: right;
  margin-right: 30rpx;
}

.price-num {
  display: flex;
  justify-content: space-between;
}

.footer {
  display: flex;
  justify-content: flex-end;
  border-bottom: 1px solid #f3f3f3;
}

.btn {
  margin-top: 8px;
  margin-bottom: 8px;
  margin-right: 5px;
}

.productPrice {
  color: #a8a8a8;
  font-size: 14px;
}

page {
  height: 100%;
}

.hot-box {
  height: 90%;
}

scroll-view ::-webkit-scrollbar
{
width: 3px;
background-color: transparent;
color: #bebebe;
}

/*定义滚动条轨道 内阴影+圆角*/
scroll-view ::-webkit-scrollbar-track
{
border-radius: 10px;
background-color: transparent;
}

/*定义滑块 内阴影+圆角*/
scroll-view ::-webkit-scrollbar-thumb
{
border-radius: 10px;
background-color: #bebebe;
}

.tip-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30%;
}

.tip-view image {
  width: 100px;
  height: 100px;
}

.tip-view text {
  padding-top: 10px;
  font-size: 16px;
  color: #a8a8a8;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading text {
  padding-left: 12px;
  color: #a8a8a8;
  font-size: 16px;
}