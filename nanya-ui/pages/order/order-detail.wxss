page {
  background-color: #f9f9f9;
}

.address, .add-address {
  display: flex;
  align-items: center;
  padding:10px 15px;
  background: #ffffff;
  margin-bottom: 15px;
}

.address .body {
  font-size: 16px;
  width: 95%;
}

.row-1 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.phone, .username {
  flex-grow: 1;
}

.phone {
  text-align: right;
}

.icon {
  margin-right: 5px;
  display: flex;
  align-items: center;
  font-size: 20px;
}

.add {
  color: #0079f3;
  font-size: 18px;
}

.row-2 {
  padding-top: 3px;
  padding-left: 21px;
  font-size: 15px;
  color:#999;
}

.add-address .body {
  font-size: 16px;
  width: 95%;
  display: flex;
  align-items: center;
}

.date,.time {
  display: flex;
  padding:10px 15px;
  font-size: 16px;
  background: #ffffff;
}

.date,.label-view,.remark-view,.leaveMessage-view {
  margin-top: 15px;
}

.remark-view, .leaveMessage-view {
  display: flex;
  padding:10px 15px;
  align-items: flex-start;
  position: relative;
  background: #ffffff;
}

.remark, .leaveMessage {
  border-radius: 5px;
  flex-grow: 1;
  height: 80px;
  background-color: #eaeaea;
  padding: 8px 8px 22px 8px;
  font-size: 16px;
}

.leaveMessage-view text {
  font-size: 14px;
  position: absolute;
  bottom: 15px;
  right: 20px;
}

.remark-view text {
  font-size: 14px;
  position: absolute;
  bottom: 15px;
  right: 20px;
}

.popup {
  width: 100%;
  height: 60%;
  background-color: #ffffff;
}

.finish-btn {
  position: fixed;
  bottom: 0px;
  width: 100%;
}

.label-view {
  padding:10px 15px;
  font-size: 18px;
  background: #ffffff;
}

.label {
  width: 95%;
  display: flex;
  margin-top :8px
}

.link {
  font-size: 16px;
}

.back {
  padding: 20px 0px 0px 10px !important;
}

.label-item {
  font-size: 16px;
  border-radius: 5px;
  margin-right: 5px;
  padding: 2px;
}

.picker {
  flex-grow: 1;
}

.title-size {
  font-size: 15px;
}

.des-size, .price-size {
  font-size: 16px;
}
.button{
  position:absolute;
  right:0px;
  bottom:20%;
  width:70%;
  border:0px solid #aaa
}
.button-item {
  margin-right : 16px;
  float :right
}